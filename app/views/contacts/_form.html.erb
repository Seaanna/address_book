<div class="space-4"></div>
<div class="text-center">
  <%= form_for(@contact) do |f| %>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-4">
      <% if @contact.errors.any? %>
      <div id="error_explanation" class="text-center">
        <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

        <ul>
          <% @contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="biggest">
        <div class="field">
          <%= f.label :first_name %><br>
          <%= f.text_field :first_name, class: "form-control text-center normal height_40" %>
        </div>
        <div class="field">
          <%= f.label :last_name %><br>
          <%= f.text_field :last_name, class: "form-control text-center normal height_40" %>
        </div>
        <div class="field">
          <%= f.label :email %><br>
          <%= f.text_field :email, class: "form-control text-center normal height_40" %>
        </div>
        <div class="field">
          <%= f.label :address %><br>
          <%= f.text_field :address, class: "form-control text-center normal height_40" %>
        </div>
      </div>
    </div>
  </div>
  <div class="space-10"></div>
  <div class="actions">
    <%= f.submit class: "btn btn-success biggest" %>
  </div>
<% end %>
</div>
