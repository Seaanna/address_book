<p id="notice text-center"><%= notice %></p>
<div class="space-10"></div>

<div class="biggest">
<h1 class= "text-center sketch huge">Address Book</h1>
</div>

<table class="table table-striped table-hover biggest">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Address</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody class="penpal">
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.address %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class:"btn btn-warning min_100 small" %></td>
        <td><%= link_to 'Destroy', contact, class:"btn btn-danger min_100 small", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
  <%= link_to 'New Contact', new_contact_path, class: "biggest btn btn-success pull-right" %>
</div>
</div>
